<section class="blog_area section-gap single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="main_blog_details">
                    @*<img class="card-img-top" src=@Model.Image alt="">*@
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))"/>
                    <h4>@Model.Name </h4>
                    <div class="user_details">

                        <div class="float-right mt-sm-0 mt-3">
                            <div class="media">
                                <div class="media-body">
                                    <h5>Mark wiens</h5>
                                    <p>@Model.DateTime.ToString("d")</p>
                                </div>
                                <div class="d-flex">
                                    <img src="/img/blog/user-img.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <p> @Html.Raw(@Model.Text)</p>
                    <div class="news_d_footer flex-column flex-sm-row">
                        @*<a href="#"><i class="lnr lnr lnr-heart"></i>4 people like this</a>*@ @*comments*@
                        <a class="justify-content-sm-center ml-sm-auto mt-sm-0 mt-2" href="#"><i class="lnr lnr lnr-bubble"></i>06 Comments</a>
                        <div class="news_socail ml-sm-auto mt-sm-0 mt-2">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</section>