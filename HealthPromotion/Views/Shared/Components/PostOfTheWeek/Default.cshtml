
<div class="single-sidebar-widget popular-post-widget">
    <h4 class="popular-title">Popular Posts</h4>
    <div class="popular-post-list">

        @foreach (var post in Model.PostOfWeek)
        {
            <div class="single-post-list">
                <div class="thumb">
                    <img style='width:150px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(post.Image))" />
                </div>
                <div class="details mt-20">
                    <a asp-controller="Home" asp-action="PostDetails" asp-route-id="@post.PostId">
                        <h6>
                            @post.Name
                        </h6>
                    </a>
                    <p>@post.DateTime.ToString("d")</p>
                </div>
            </div>

        }
    </div>
</div>