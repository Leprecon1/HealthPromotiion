@model IEnumerable<Category>


    <li class="dropdown">
        <a 
           class="dropdown-toggle" data-toggle="dropdown">Категории</a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Home" asp-action="Index"
                       asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </li>
            }
            <li class="divider"></li>
            <li>
                <a asp-controller="Home" asp-action="Index" asp-route-Category="">View all Categories</a>
            </li>
        </ul>
    </li>
