<div class="col-lg-6 col-md-6">
    <div class="single-amenities">
        <div class="amenities-thumb">
            <img class="img-fluid w-100"
                 src=@Model.Image
                 alt="" />
        </div>
        <div class="amenities-details">
            <h5>
                <a href="#">
                    @Model.Name
                </a>
            </h5>
            <div class="amenities-meta mb-10">
                <a href="#" class=""><span class="ti-calendar"></span>@Model.DateTime.ToString()</a>
                <a href="#" class="ml-20"><span class="ti-comment"></span>05</a>
            </div>
            <p>
                @Model.ShortDescription
            </p>

            <div class="d-flex justify-content-between mt-20">
                <div>
                    <a href="#" class="blog-post-btn">
                        Read More <span class="ti-arrow-right"></span>
                    </a>
                </div>
                <div class="category">
                    <a href="#">
                        <span class="ti-folder mr-1"></span>Travel
                    </a>
                </div>
            </div>
        </div>
    </div>
 </div>
